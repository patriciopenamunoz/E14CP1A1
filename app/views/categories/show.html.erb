<h1>Showing category</h1>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<%= render 'products/form' %>

<table>
  <tr>
    <td>Name</td>
    <td>Price</td>
    <td></td>
  </tr>
  <% @category.products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Destroy',
                     category_product_path(@category, product),
                     method: :delete %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
